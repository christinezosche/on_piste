
<% if @trip.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@trip.errors.count, "error") %>
    prohibited this trip from being saved:
  </h2>

  <ul>
  <% @trip.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for @trip do |f| %>
  <%= f.label :departure_date %>
  <%= f.date_field :date %>
  <%= f.label :mountain %>
  <%= f.collection_select :mountain, Mountain.all, :id, :name, include_blank: true %>
  <%= f.submit value='Add Trip'%>
<% end %>